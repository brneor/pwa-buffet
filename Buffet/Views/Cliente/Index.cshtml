            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                            
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit btn btn-outline-dark"></i></a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye btn btn-outline-dark"></i></a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash btn btn-outline-danger"></i></a>
