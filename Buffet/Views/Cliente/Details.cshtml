@model Buffet.Models.Buffet.Cliente.ClienteEntity

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<h1>@Html.DisplayFor(model => model.Nome)</h1>

<div>
    <a asp-action="Index"><i class="fa fa-arrow-left btn btn-outline-dark"></i></a>
    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-edit btn btn-outline-dark"></i></a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tipo de cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoCliente.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Data de nascimento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Endereço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class="col-sm-2">
            Observações
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
        <dt class="col-sm-2">
            Data de cadastro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class="col-sm-2">
            Data da última alteração
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAlteracao)
        </dd>
    </dl>
</div>

<hr />
<h4>Eventos deste cliente</h4>

<table class="table">
    <thead>
    <tr>
        <th>
            Descrição
        </th>
        <th>
            Início
        </th>
        <th>
            Término
        </th>
        <th>
            Observações
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var evento in Model.Eventos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => evento.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => evento.HoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => evento.HoraTermino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => evento.Observacoes)
            </td>
        </tr>
    }
    </tbody>
</table>