@model Buffet.Models.Buffet.Cliente.ClienteEntity

@{
    ViewData["Title"] = "Apagar";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

<h1>Apagar registro</h1>

<h3>Você tem certeza que deseja apagar o cliente @Html.DisplayFor(model => model.Nome)?</h3>
<div>
    <a asp-action="Index"><i class="fa fa-arrow-left btn btn-outline-dark"></i></a>
</div>
<div>
    <hr />
    <dl class="row">
            <dt class = "col-sm-2">
                Tipo de cliente
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TipoCliente.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                Data de nascimento
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataNascimento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cpf)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cpf)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cnpj)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cnpj)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Endereço
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Endereco)
            </dd>
            <dt class="col-sm-2">
                Observações
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Observacoes)
            </dd>
            <dt class="col-sm-2">
                Data de cadastro
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
            <dt class="col-sm-2">
                Data da última alteração
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataAlteracao)
            </dd>
        </dl>
</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
