<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - iFeast</title>
    <link rel="icon" href="~/img/logo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link href="~/css/all.css" rel="stylesheet"> <!--load all styles -->
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body class="inner">
<script>
    function openNav() {
      document.getElementById("mySidenav").style.width = "250px";
    }
    
    function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
    } 
</script>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-brand box-shadow mb-3">
        <div class="container">
            <span class="menu-link mr-2" onclick="openNav()"><i class="fas fa-bars"></i></span>
            <a class="navbar-brand" asp-area="" asp-controller="Inner" asp-action="Start">
                <img class="mr-2" src="~/img/logo.png" alt="feast icon" height="32" width="32">
                iFeast
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link nav-light-text mr-1" asp-area="" asp-controller="Inner" asp-action="User">Usuário</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-light-text btn-login mr-1" asp-area="" asp-controller="Inner" asp-action="Help">Ajuda</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light btn-login" asp-area="" asp-controller="Home" asp-action="Index">Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="#">Serviços</a>
    <a asp-area="" asp-controller="Cliente" asp-action="Index" >Clientes</a>
    <a href="#">Contato</a>
    <a href="#">Sobre</a>
</div>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer bg-brand">
    <div class="container">
        &copy; 2021 • iFeast • <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidade</a> •
        <a asp-area="" asp-controller="Home" asp-action="Eula">Termos de Uso</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>