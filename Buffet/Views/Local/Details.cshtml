@model Buffet.Models.Buffet.Local.LocalEntity

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<h1>@Html.DisplayFor(model => model.Descricao)</h1>

<div>
    <a asp-action="Index"><i class="fa fa-arrow-left btn btn-outline-dark"></i></a>
    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-edit btn btn-outline-dark"></i></a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
    </dl>
</div>