@model Buffet.Models.Buffet.Local.LocalEntity

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<h1>@Html.DisplayFor(model => model.Descricao)</h1>

<div>
    <a asp-action="Index"><i class="fa fa-arrow-left btn btn-outline-dark"></i></a>
    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-edit btn btn-outline-dark"></i></a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
    </dl>
</div>

<hr />
<h4>Eventos neste local</h4>

<table class="table">
    <thead>
    <tr>
        <th>
            Descrição
        </th>
        <th>
            Início
        </th>
        <th>
            Término
        </th>
        <th>
            Observações
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var evento in Model.Eventos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => evento.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => evento.HoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => evento.HoraTermino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => evento.Observacoes)
            </td>
        </tr>
    }
    </tbody>
</table>