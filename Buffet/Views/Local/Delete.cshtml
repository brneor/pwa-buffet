@model Buffet.Models.Buffet.Local.LocalEntity

@{
    ViewData["Title"] = "Apagar";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

<h1>Apagar registro</h1>

<h3>Você tem certeza que deseja apagar o local @Html.DisplayFor(model => model.Descricao)?</h3>
<div>
    <a asp-action="Index"><i class="fa fa-arrow-left btn btn-outline-dark"></i></a>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Apagar" class="btn btn-danger" />
</form>