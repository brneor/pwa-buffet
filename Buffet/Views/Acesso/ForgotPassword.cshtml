@{
    ViewData["Title"] = "Recuperar senha";
}

<div class="row justify-content-md-center v-center">
    <div>
        <div class="">
            <div class="card non-opaque">
                <div class="card-body">
                    <h5 class="card-title text-center">@ViewData["Title"]</h5>
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <small id="emailHelp" class="form-text text-muted">Nós nunca compartilhamos essa informação com terceiros.</small>
                        </div>

                        <div class="form-group">
                            <p>Se uma conta com este email existir, enviaremos a recuperação de senha para o endereço informado</p>
                        </div>
                        <button type="submit" class="btn btn-primary ml-auto">Recuperar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>